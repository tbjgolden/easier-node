{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["es2021"],
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "emitDeclarationOnly": true
  },
  "include": ["typings.d.ts", "lib/**/*"]
}
